package com.assignment.recruitment.offer;

public class Application {

	private String relatedOffer;
	private String email;
	private String resume;
	public enum Status {
			APPLIED, INVITED, REJECTED, HIRED;
		
		public String toString() {
			switch(this) {
			case APPLIED : return "APPLIED";
			case INVITED : return "INVITED";
			case REJECTED : return "REJECTED";
			case HIRED : return "HIRED";
			}
			return null;
		}	
	}
	public String getRelatedOffer() {
		return relatedOffer;
	}
	public void setRelatedOffer(String relatedOffer) {
		this.relatedOffer = relatedOffer;
	}
	public String getEmail() {
		return email;
	}
	public void setEmail(String email) {
		this.email = email;
	}
	public String getResume() {
		return resume;
	}
	public void setResume(String resume) {
		this.resume = resume;
	}
	public Application(String relatedOffer, String email, String resume, String status) {
		super();
		this.relatedOffer = relatedOffer;
		this.email = email;
		this.resume = resume;
	}
	
}
